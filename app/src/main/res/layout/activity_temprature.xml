<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".Temprature">


    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="#0279d7"
                android:spinnerMode="dropdown" />
        </androidx.cardview.widget.CardView>


        <!--<TextView
            android:id="@+id/edittxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Number"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:maxLength="100"
            android:textColor="#FF6C6C6C"/>-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edittxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:editable="false"
                android:hint="Enter Number"
                android:maxLength="60"
                android:textAlignment="textEnd"

                android:textColor="#FF6C6C6C"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <Spinner
                android:id="@+id/spinner2"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="#0279d7"
                android:spinnerMode="dropdown" />
        </androidx.cardview.widget.CardView>

        <!--<TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Result"
            android:textSize="16dp"
            android:paddingTop="23dp"
            android:paddingRight="10dp"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:textColor="#6c6c6c"
            android:maxLength="70"/>-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:clickable="false"
                android:editable="false"
                android:hint="Result"
                android:maxLength="60"
                android:paddingRight="10dp"
                android:textAlignment="textEnd"
                android:textColor="#FF6C6C6C"
                android:textStyle="bold"
           />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="8">


            <Button
                android:id="@+id/but0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/circle_button"
                android:onClick="clickOnBut1"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/circle_button"
                android:onClick="clickOnBut2"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/circle_button"
                android:onClick="clickOnBut3"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/circle_button"
                android:onClick="clickOnButC"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="8">

            <Button
                android:id="@+id/but4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/circle_button"
                android:onClick="clickOnBut4"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/circle_button"
                android:onClick="clickOnBut5"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/circle_button"
                android:onClick="clickOnBut6"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/circle_button"
                android:onClick="clickOnButBackspace"
                android:text="C"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="8">

            <Button
                android:id="@+id/but8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/circle_button"
                android:onClick="clickOnBut7"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/circle_button"
                android:onClick="clickOnBut8"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/circle_button"
                android:onClick="clickOnBut9"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/circle_button"
                android:clickable="true"
                android:onClick="clickOnButDot"
                android:text="."
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="16">

            <Button
                android:id="@+id/but12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_margin="2dp"
                android:background="@drawable/circle_button"
                android:onClick="clickOnButPlusMinus"
                android:text="-/+"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/circle_button"
                android:onClick="clickOnBut0"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"

                android:layout_weight="16"
                android:background="@drawable/circle_button"
                android:clickable="false"
                android:focusable="false"
                android:onClick="clickOnButEqual"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>